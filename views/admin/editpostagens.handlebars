{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar postagem:</h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo: </label>
                <input value="{{postagem.titulo}}" type="text" name="titulo" class="form-control">
            <label for="slug">Slug: </label>
                <input value="{{postagem.slug}}" type="text" name="slug" class="form-control">
            <label for="descricao">Descrição: </label>
                <input value="{{postagem.descricao}}" type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteúdo: </label>
                <textarea name="conteudo" class="form-control" >{{postagem.conteudo}}</textarea>
                <label for="categoria">Categoria: </label>
                <select name="categoria" class="form-select">
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhum categoria registrada</option>
                    {{/each}}
                </select>
            <button class="btn btn-success mt-3" type="submit">Editar Postagem</button>
        </form>
    </div>
</div>